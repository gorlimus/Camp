<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="col-6">
            <div class="card mb-3">
                <img class="card-img-top" src="<%=campground.image%>">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= campground.title %>
                    </h5>
                    <p class="card-text">
                        <%= campground.descritpion%>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%=campground.location%>
                    </li>
                    <li class="list-group-item">
                        $<%= campground.price %>/night
                    </li>
                </ul>
                <div class="card-body">
                    <a class="card-link btn btn-info" href="/campgrounds/<%= campground.id %>/edit ">Edit</a>
                    <form class="d-inline" action="/campgrounds/<%=campground.id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-6">
            <h2>Leave a review</h2>
            <form action="/campgrounds/<%= campground.id %>/reviews" method="POST" class="validated-form mb-3"
                novalidate>
                <div class="mb-3">
                    <label class="form-label" for="rating">Rating</label>
                    <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating" value="3"
                        required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="body">Review</label>
                    <textarea class="form-control" name="review[body]" id="body" cols="1" rows="3" required></textarea>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <button class="btn btn-success">Submit Review</button>
            </form>
            <% for (let review of campground.reviews) { %>
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">
                            Rating: <%= review.rating%>
                        </h5>
                        <p class="card-text">
                            Review: <%= review.body%>
                        </p>
                        <form class="d-inline"
                            action="/campgrounds/<%=campground.id%>/reviews/<%=review._id%>?_method=DELETE"
                            method="POST">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
                <% } %>

        </div>
    </div>